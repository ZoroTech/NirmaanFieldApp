<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50"
    android:padding="24dp"
    tools:context=".ui.attendance.AttendanceFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/tvAttendanceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/attendance_title"
        android:textColor="@color/primary_blue"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Date Display Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDateInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAttendanceTitle"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_card"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Current Date -->
            <TextView
                android:id="@+id/tvCurrentDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Wednesday, Jan 22, 2026" />

            <!-- Current Time -->
            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="48sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                tools:text="09:45 AM" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Location Status Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLocationStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardDateInfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Location Icon -->
            <ImageView
                android:id="@+id/ivLocationIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/location_icon_description"
                android:src="@android:drawable/ic_menu_mylocation"
                app:tint="@color/gray_600" />

            <!-- Location Status Text -->
            <TextView
                android:id="@+id/tvLocationStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/location_not_captured"
                android:textColor="@color/gray_800"
                android:textSize="16sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Punch In Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPunchIn"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/gradient_success"
        android:text="@string/punch_in"
        android:textSize="20sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        app:backgroundTint="@null"
        app:cornerRadius="16dp"
        app:elevation="6dp"
        app:icon="@android:drawable/ic_menu_upload"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardLocationStatus" />

    <!-- Punch In Photo Label -->
    <TextView
        android:id="@+id/tvPunchInPhotoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/punch_in_photo_label"
        android:textColor="@color/gray_800"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPunchIn"
        tools:visibility="visible" />

    <!-- Punch In Photo Preview -->
    <ImageView
        android:id="@+id/ivPunchInPhoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/punch_in_photo_description"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPunchInPhotoLabel"
        tools:visibility="visible"
        tools:src="@android:drawable/ic_dialog_info" />

    <!-- GPS Location Card (Punch In Only) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardGpsLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivPunchInPhoto"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- GPS Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GPS Location"
                android:textColor="@color/gray_800"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Latitude -->
            <TextView
                android:id="@+id/tvLatitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Latitude: --"
                android:textColor="@color/gray_800"
                android:textSize="13sp"
                android:fontFamily="monospace"
                android:letterSpacing="0.02" />

            <!-- Longitude -->
            <TextView
                android:id="@+id/tvLongitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Longitude: --"
                android:textColor="@color/gray_800"
                android:textSize="13sp"
                android:fontFamily="monospace"
                android:letterSpacing="0.02" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Punch Out Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPunchOut"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_button"
        android:enabled="false"
        android:text="@string/punch_out"
        android:textSize="20sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        app:backgroundTint="@null"
        app:cornerRadius="16dp"
        app:elevation="6dp"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardGpsLocation" />

    <!-- Today's Attendance Summary Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAttendanceSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPunchOut"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/today_summary"
                android:textColor="@color/gray_800"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Punch In Time -->
            <TextView
                android:id="@+id/tvPunchInTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray_800"
                android:textSize="14sp"
                tools:text="Punch In: 09:00 AM" />

            <!-- Punch Out Time -->
            <TextView
                android:id="@+id/tvPunchOutTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/gray_800"
                android:textSize="14sp"
                tools:text="Punch Out: 06:00 PM" />

            <!-- Total Duration -->
            <TextView
                android:id="@+id/tvTotalDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/gray_800"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Duration: 9h 0m" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Visual Attendance Proof Section -->
    <TextView
        android:id="@+id/tvVisualProofTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/visual_attendance_proof"
        android:textColor="@color/gray_800"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardAttendanceSummary"
        tools:visibility="visible" />

    <!-- Punch In & Punch Out Photos Container -->
    <LinearLayout
        android:id="@+id/layoutPhotosContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvVisualProofTitle"
        tools:visibility="visible">

        <!-- Punch In Photo Section -->
        <LinearLayout
            android:id="@+id/layoutPunchInProof"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- Punch In Photo Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/ivProofPunchInPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray_300"
                    android:contentDescription="@string/punch_in_photo_description"
                    android:scaleType="centerCrop" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Punch In Time & Location Details -->
            <TextView
                android:id="@+id/tvProofPunchInTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray_800"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:text="09:00 AM" />

            <TextView
                android:id="@+id/tvProofPunchInLat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/gray_600"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Lat: 28.7041" />

            <TextView
                android:id="@+id/tvProofPunchInLng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/gray_600"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Lng: 77.1025" />

        </LinearLayout>

        <!-- Punch Out Photo Section -->
        <LinearLayout
            android:id="@+id/layoutPunchOutProof"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Punch Out Photo Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/ivProofPunchOutPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray_300"
                    android:contentDescription="@string/punch_out_photo_description"
                    android:scaleType="centerCrop" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Punch Out Time & Location Details -->
            <TextView
                android:id="@+id/tvProofPunchOutTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray_800"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:text="06:00 PM" />

            <TextView
                android:id="@+id/tvProofPunchOutLat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/gray_600"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Lat: 28.7041" />

            <TextView
                android:id="@+id/tvProofPunchOutLng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/gray_600"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Lng: 77.1025" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Spacing -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutPhotosContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>
