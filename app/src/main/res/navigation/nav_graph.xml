<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- Splash Fragment - Entry point -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.nirmaan.app.ui.splash.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">

        <!-- Navigate to Login if user is not logged in -->
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

        <!-- Navigate to Dashboard if user is logged in -->
        <action
            android:id="@+id/action_splashFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Login Fragment - Placeholder (to be implemented) -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.nirmaan.app.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" />

    <!-- Dashboard Fragment - Placeholder (to be implemented) -->
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.nirmaan.app.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" />

</navigation>